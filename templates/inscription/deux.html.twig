{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

{# -----------------------Fil d'Ariane------------------------------------- #}
<nav role="navigation" class="fr-breadcrumb" aria-label="Vous êtes ici :">
  <button class="fr-breadcrumb__button" aria-expanded="false" aria-controls="breadcrumb-1">Voir le fil d'Ariane</button>
  <div class="fr-collapse" id="breadcrumb-1">
    <ul class="fr-breadcrumb__list">
      <li>
        <a class="fr-breadcrumb__link" href="/">Accueil</a>
      </li>
      <li>
        <a class="fr-breadcrumb__link" href="/inscription/un">Renseignement</a>
      </li>
      <li>
        <a class="fr-breadcrumb__link" href="#">Scolarité antérieure</a>
        </li>
    </ul>
  </div>
</nav>

{# ------------------------------------------------------------ #}
<div class="fr-container">

  <h1>Inscription au Lycée Fulbert</h1>
  <div class="fr-stepper">
    <h2 class="fr-stepper__title">
       Scolarité antérieure de l'étudiant
      <span class="fr-stepper__state">Étape 2 sur 7</span>
    </h2>
    <div class="fr-stepper__steps" data-fr-current-step="2" data-fr-steps="7"></div>
    <p class="fr-stepper__details">
      <span class="fr-text--bold">Étape suivante :</span> Responsables légaux
    </p>
  </div>

   <div class="sp-perso sp-perso-content fr-mb-4w">
    <div class="sp-perso-header">
        <h3 class="fr-h3 sp-perso-title sp-accent">Parcours antécédents</h3>
    </div>

{{ form_start(form) }}
{{ form_errors(form) }}

  
  {# ----------------------Année précédente (à rendre dynamique)-------------------------------------- #}
  <h3>{{ "now"|date("Y")-3 }}-{{ "now"|date("Y")-2 }} :</h3>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">exemple : Lycée Fulbert Chartres</span>
    {{ form_row(form.antecedent1.school, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">exemple : Première Générale</span>
    {{ form_row(form.antecedent1.classe, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">exemple : Math Experte</span>
    {{ form_row(form.antecedent1.option, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">Exemple : Anglais</span>
    {{ form_row(form.antecedent1.lv1, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">Exemple : Espagnol</span>
    {{ form_row(form.antecedent1.lv2, {'attr': {'class': 'fr-input'}}) }}
  </div>

  {# --------------------Année dernière (à rendre dynamique)---------------------------------------- #}
  <h3>{{ "now"|date("Y")-2 }}-{{ "now"|date("Y")-1 }} :</h3>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">exemple : Lycée Fulbert Chartres</span>
    {{ form_row(form.antecedent2.school, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">exemple : Terminale Générale</span>
    {{ form_row(form.antecedent2.classe, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">exemple : Math Experte</span>
    {{ form_row(form.antecedent2.option, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">Exemple : Anglais</span>
    {{ form_row(form.antecedent2.lv1, {'attr': {'class': 'fr-input'}}) }}
  </div>

  <div class="fr-input-group" style="margin: 35px">
    <span class="fr-hint-text">Exemple : Espagnol</span>
    {{ form_row(form.antecedent2.lv2, {'attr': {'class': 'fr-input'}}) }}
  </div>

  {# ------------------------------------------------------------ #}

  <h3>Dernier diplôme obtenu</h3>

  <div class="fr-input-group" style="margin: 35px">
    <label class="fr-label" for="text-input-diplome">
        <span class="fr-hint-text">Exemple : BAC Général</span>
    </label>
    <input class="fr-input" type="text" id="text-input-diplome" name="diplome">
  </div>

  {# ------------------------------------------------------------ #}
<div id="step2" style="display:none;">
      {{ form_row(form.antecedent1) }}
      {{ form_row(form.antecedent2) }}

    </div>
  <div class="fr-mt-4w">
        <button class="fr-btn" type="submit">Suivant</button>
        <div style="display: none;">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form, {'render_rest': false}) }}
      </div>
      
</div>
</div>
{% endblock %}